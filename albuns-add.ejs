<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Cadastrar Álbum</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>

    <h1>Cadastrar Álbum</h1>

    <form action="/albuns/add" method="post">
        <label>Nome do álbum:</label><br>
        <input type="text" name="titulo" required><br><br>

        <label>Artista:</label><br>
        <select name="id_artista" id="artista" required>
            <option value="">Selecione um artista</option>
        </select><br><br>

        <button type="submit">Salvar</button>
    </form>

    <br>
    <a href="/albuns/listar">Voltar para lista</a>

<script>
    fetch('/albuns/preenche-select')
        .then(res => res.json())
        .then(dados => {
            const select = document.getElementById('artista');
            dados.resultado.forEach(artista => {
                const opt = document.createElement('option');
                opt.value = artista.id_artista;
                opt.textContent = artista.nome;
                select.appendChild(opt);
            });
        });
</script>


</body>
</html>

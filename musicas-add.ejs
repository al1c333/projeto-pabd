<!DOCTYPE html>
<html lang="pt-br">

<head>
    <title>Adicionar música</title>
    <meta charset="utf-8">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.4/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.4/js/select2.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {

            $(".select2").select2();

            const selectAlbum = document.getElementById("inputAlbum");
            const selectArtista = document.getElementById("inputArtista");

            // carregar álbuns
            fetch("/albuns/preenche-select")
                .then(res => res.json())
                .then(data => {
                    data.resultado.forEach(album => {
                        const option = document.createElement("option");
                        option.value = album.id_album;
                        option.textContent = album.titulo;  // ← CORRIGIDO
                        selectAlbum.appendChild(option);
                    });
                });

            // carregar artistas
            fetch("/artistas/preenche-select")
                .then(res => res.json())
                .then(data => {
                    data.resultado.forEach(artista => {
                        const option = document.createElement("option");
                        option.value = artista.id_artista;
                        option.textContent = artista.nome;
                        selectArtista.appendChild(option);
                    });
                });
        });
    </script>
</head>

<body class="container mt-4">

    <h1 class="display-6">Cadastro de músicas</h1>
    <br>

    <form method="post" action="/musicas/add" class="row g-3">

        <div class="row">
            <div class="col">
                <label for="inputTitulo" class="fw-bold">Título</label>
                <input type="text" class="form-control" name="titulo" id="inputTitulo" placeholder="Título da música"
                    required>
            </div>

            <div class="col">
                <label for="inputDuracao" class="fw-bold">Duração</label>
                <input type="text" class="form-control" name="duracao" id="inputDuracao" placeholder="Ex: 03:45"
                    required>
            </div>

            <div class="col">
                <label for="inputAlbum" class="fw-bold">Álbum</label>
                <select class="form-select select2" name="id_album" id="inputAlbum" required>
                    <option value="">Selecione um álbum</option>
                </select>
            </div>
        </div>

        <br>

        <div class="row">
            <div class="col">
                <label for="inputArtista" class="fw-bold">Artista(s)</label>
                <select class="form-select select2" name="id_artista" id="inputArtista" multiple required>
                    <option value="">Selecione o(s) artista(s)</option>
                </select>
            </div>
        </div>

        <br><br>

        <div class="row">
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">
                    Cadastrar
                </button>
            </div>
        </div>

    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous">
        </script>

</body>

</html>